<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<plugin id="com.outsystems.plugins.barcode" version="2.0.2" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
  <name>OSBarcode</name>
  <description>Cordova Bridge for the OutSystems UNOfficially Supported Barcode Plugin.</description>
  <author>OutSystems Inc</author>
  <js-module name="OSBarcode" src="www/OSBarcode.js">
    <clobbers target="cordova.plugins.OSBarcode"/>
  </js-module>

  <js-module name="OSBarcodeScanner" src="www/OSBarcodeScanner.js">
    <clobbers target="cordova.plugins.OSBarcodeScanner"/>
  </js-module>

  <js-module name="OSBarcodeConstants" src="www/OSBarcodeConstants.js">
    <clobbers target="OSBarcodeConstants"/>
  </js-module>

<js-module srcs
  <clobbers target="OSBarcode.advanced"/>
</js-module>

 <platform name="android">
  <config-file target="AndroidManifest.xml" parent="/manifest">
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera.any" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>
  </config-file>

  <config-file target="AndroidManifest.xml" parent="/manifest/application">
    <activity
      android:name="com.wku.osbarcode.ScanAndGrabActivity"
      android:screenOrientation="sensorPortrait"
      android:exported="false"
      android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
      android:hardwareAccelerated="true"/>
  </config-file>

  <source-file src="src/android/com/wku/osbarcode/OSBarcodePlugin.kt"     targetid/com/wku/osbarcode/ScanAndGrabActivity.kt" target-dir="src/com/wosbarcode/ScanAnalyzer.kt"        target-dir="src/com/wku/osbarcode_and_grab.xml"
                 target="res/layout/activity_scan_and_grabamera2:1.3.4
  <framework src="androidx.camera:camera-lifecycle:.camera:camera-view:1.3.4
  <om.google.mlkit:barcode-scanning:17.2.0
</platform>
  <platform name="ios">
    <config-file parent="/*" target="config.xml">
      <feature name="OSBarcode">
        <param name="ios-package" value="OSBarcode"/>
      </feature>
      <preference name="SwiftVersion" value="5" />
    </config-file>

    <preference name="CAMERA_USAGE_DESCRIPTION" default=" " />
    <config-file target="*-Info.plist" parent="NSCameraUsageDescription">
      <string>$CAMERA_USAGE_DESCRIPTION</string>
    </config-file>

    <source-file src="src/ios/OSBarcode.swift" />
    <source-file src="src/ios/OSBarcodeError.swift" />
    
    <source-file src="src/ios/OSBARCArgumentMappable.swift" target-dir="extensions" />
    <source-file src="src/ios/OSBARCScanParameters+Decodable.swift" target-dir="extensions" />

    <podspec>
      <config>
        <source url="https://cdn.cocoapods.org/"/>
      </config>
      <pods use-frameworks="true">
        <pod name="OSBarcodeLib" spec="2.0.1" />
      </pods>
    </podspec>
  </platform>
</plugin>
